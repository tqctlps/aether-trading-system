# AETHER Trading System Configuration
# Copy this file to .env and fill in your API keys

# Environment
ENVIRONMENT=development
DEBUG=true

# Database (default values for DevContainer)
DATABASE_URL=postgresql://aether:aether123@postgres:5432/aether_trading
REDIS_URL=redis://redis:6379/0

# AI Services
CLAUDE_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional

# Exchange APIs (at least one required for live trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Blockchain RPC Endpoints (optional - defaults provided)
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/your-api-key
BSC_RPC=https://bsc-dataseed.binance.org/
POLYGON_RPC=https://polygon-rpc.com/
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC=https://mainnet.optimism.io

# Trading Configuration
MAX_POSITION_SIZE=0.1  # 10% of portfolio
MAX_SLIPPAGE=0.02  # 2%
MIN_PROFIT_THRESHOLD=0.015  # 1.5%
STOP_LOSS_PERCENTAGE=0.05  # 5%
TAKE_PROFIT_PERCENTAGE=0.10  # 10%

# Bot Hunter Configuration
BOT_SCAN_INTERVAL=60  # seconds
BOT_SCORE_THRESHOLD=0.7  # minimum score to track
MAX_BOTS_TO_TRACK=100

# Evolution Engine Configuration
POPULATION_SIZE=50
MUTATION_RATE=0.1
GENERATIONS_PER_SAVE=10
FITNESS_THRESHOLD=0.8

# Risk Management
MAX_DAILY_LOSS=0.1  # 10% of portfolio
MAX_OPEN_POSITIONS=5
POSITION_SIZING_METHOD=kelly  # kelly, fixed, proportional

# Monitoring
HEALTH_CHECK_INTERVAL=30  # seconds
METRIC_RETENTION_DAYS=30